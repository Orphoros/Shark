{
  "name": "shark",
  "displayName": "Shark",
  "description": "Shark language support",
  "version": "0.0.1",
  "icon": "images/shark_ext_logo.png",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand: extension.sayHello"
  ],
  "contributes": {
    "languages": [
      {
        "id": "shark",
        "aliases": [
          "Shark",
          "shark"
        ],
        "extensions": [
          ".shark",
          ".srk"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/shark_file_icon.svg",
          "dark": "./images/shark_file_icon.svg"
        }
      },
      {
        "id": "egg",
        "aliases": [
          "Egg",
          "egg"
        ],
        "extensions": [
          ".egg"
        ],
        "icon": {
          "light": "./images/egg_file_icon.svg",
          "dark": "./images/egg_file_icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "shark",
        "scopeName": "source.shark",
        "path": "./syntaxes/shark.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "shark",
        "path": "./snippets/shark.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "shark.json",
        "url": "./schemas/shark-schema.json"
      }
    ]
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
